{
  "defaults": {
    "timeout": 10000,
    "chromeLaunchConfig": {
      "args": [
        "--no-sandbox",
        "--disable-setuid-sandbox"
      ]
    },
    "standard": "WCAG2AA",
    "runners": [
      "axe",
      "htmlcs"
    ],
    "hideElements": [
      ".ignore-pa11y",
      ".katex",
      "#trout-ornament-container"
    ],
    "ignore": [
      "frame-tested",
      "color-contrast",
      "video-caption",
      "duplicate-id",
      "definition-list",
      "scrollable-region-focusable",
      "list"
    ],
    "concurrency": 1
  }
}
