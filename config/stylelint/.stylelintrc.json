{
  "plugins": ["stylelint-declaration-strict-value", "./scss-custom-property-interpolation.js"],
  "extends": ["stylelint-config-standard-scss", "stylelint-prettier/recommended"],
  "rules": {
    "prettier/prettier": [
      true,
      { "printWidth": 100, "tabWidth": 2, "semi": false, "trailingComma": "all" }
    ],
    "no-invalid-double-slash-comments": null,
    "no-descending-specificity": null,
    "function-no-unknown": null,
    "scss/function-no-unknown": true,
    "custom/scss-custom-property-interpolation": true,
    "prettier/prettier": [true, { "printWidth": 100, "tabWidth": 2, "semi": false }]
  }
}
